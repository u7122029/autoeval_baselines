% makes header
\newcommand{\makefinding}[1]{
    \vspace*{-1.7cm} % get rid of random white space
    \noindent\makebox[\linewidth][c]{%
      \colorbox{\postertype}{%
        \parbox[t][0.33\paperheight][c]{\paperwidth}{%
          \hspace*{\dimexpr\hoffset+\oddsidemargin+1in\relax}%
          \begin{minipage}{\textwidth}
          \textcolor{white}
            {\fontsize{29}{49} \selectfont
            \begin{flushleft}
                 \nohyphens{#1}
            \end{flushleft}
            }
          \end{minipage}%
        }%
      }%
    }\par\medskip
}

% makes footer
\newcommand{\makefooter}[2]{
    \vspace*{\fill}
    \noindent\makebox[\linewidth][c]{%
      \colorbox{\postertype}{%
        \parbox[c][0.14\paperheight][c]{\paperwidth}{%
          \hspace*{\dimexpr\hoffset+\oddsidemargin+1in\relax}%
          \begin{minipage}[c][0.14\paperheight][c]{0.15\textwidth}
                \includegraphics[scale=0.1, left]{#2}
          \end{minipage}
          \begin{minipage}[c][0.14\paperheight][c]{0.3\textwidth}
            \begin{flushleft}
              \textcolor{white}
                {Scan the QR code to download\\the paper!
                }  
            \end{flushleft}
          \end{minipage}
          \hfill
          \begin{minipage}[c][0.14\paperheight][c]{0.365\textwidth}
            \includegraphics[left, height=0.07\paperheight]{#1}
          \end{minipage}
        }%
      }%
    }\par\medskip
}

% alternative footer
\newcommand{\makealtfooter}[2]{
    \vspace*{\fill}
    \noindent\makebox[\linewidth][c]{%
      \colorbox{\postertype}{%
        \parbox[c][0.14\paperheight][c]{\paperwidth}{%
          \hspace*{\dimexpr\hoffset+\oddsidemargin+1in\relax}%
          \begin{minipage}[c][0.14\paperheight][c]{0.3\textwidth}
            % your logo here
            \includegraphics[height=0.11\paperheight, left]{#1}
            \end{minipage}
          \hfill
          \begin{minipage}[c][0.14\paperheight][c]{0.4\textwidth}
            \begin{flushright}
                \textcolor{white}
                {\large{
                    Download the paper $\rightarrow$}
                }
                \end{flushright}
          \end{minipage}
          \begin{minipage}[c][0.14\paperheight][c]{0.2\textwidth}
                \includegraphics[height=0.11\paperheight, left]{#2}
          \end{minipage}
        }%
      }%
    }\par\medskip
}


